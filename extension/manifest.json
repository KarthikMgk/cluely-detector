{
  "manifest_version": 3,
  "name": "Overlay Watchdog Bridge",
  "version": "1.0.0",
  "permissions": ["nativeMessaging"],
  "background": { "service_worker": "bg.js", "type": "module" },
  "action": { "default_title": "Watchdog" },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  }
}
